{
  "name": "moduk-frontend-guidance-site",
  "version": "0.1.0",
  "description": "MOD.UK Frontend guidance website",
  "main": "todo.js",
  "scripts": {
    "format": "dprint fmt",
    "format:check": "dprint check",
    "lint": "npm run lint:types && npm run lint:source",
    "lint:source": "eslint --ext .js --ext .ts --ext .mjs --ext .mts --max-warnings 0 .",
    "lint:types": "tsc --noEmit",
    "prepare": "husky install",
    "start": "eleventy --serve",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/defencedigital/moduk-frontend-guidance-site.git"
  },
  "keywords": [
    "moduk",
    "mod",
    "frontend",
    "design",
    "system"
  ],
  "author": "MOD.UK Design System Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/defencedigital/moduk-frontend-guidance-site/issues"
  },
  "homepage": "https://github.com/defencedigital/moduk-frontend-guidance-site#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.4.1",
    "@commitlint/config-conventional": "^17.4.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "dprint": "^0.34.1",
    "eslint": "^8.31.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-unicorn": "^45.0.2",
    "happy-dom": "^8.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "vitest": "^0.26.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings 0",
      "dprint fmt"
    ],
    "*.{md,yaml,yml}": [
      "dprint fmt"
    ]
  }
}
