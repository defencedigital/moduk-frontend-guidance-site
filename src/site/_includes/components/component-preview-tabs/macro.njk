{% macro guidanceComponentPreviewTabs(params) -%}

<ul class="guidance-component-preview__tabs" role="tablist">
  {%- for tab in params.tabs %}
  <li class="guidance-component-preview__tab-item" role="presentation">
    <a class="guidance-component-preview__tab-item-link govuk-link moduk-link--maroon" href="#{{ tab.panelId }}" role="tab" aria-controls="{{ tab.panelId }}" data-tab-id="{{ tab.panelId }}">{{ tab.label }}</a>
  </li>
  {% endfor -%}

  <li class="guidance-component-preview__tab-item-spacing" role="presentation"></li>
</ul>

{% for tab in params.tabs %}
  <div class="guidance-component-preview__mobile-button-wrapper{% if loop.first %} guidance-component-preview__mobile-button-wrapper--first{% endif %}">
    <a class="guidance-component-preview__mobile-button govuk-link moduk-link--maroon" href="#{{ tab.panelId }}" aria-controls="{{ tab.panelId }}" data-tab-id="{{ tab.panelId }}" role="button">
      {{ tab.label }}
    </a>
  </div>
  <div class="guidance-component-preview__tab-contents" role="tabpanel" id="{{ tab.panelId }}">
    {{ tab.contents }}
  </div>
{% endfor %}

{%- endmacro %}
