{
  "newLineKind": "system",
  "typescript": {
    "semiColons": "asi",
    "quoteStyle": "preferSingle",
    "quoteProps": "asNeeded"
  },
  "json": {
  },
  "markdown": {
    "textWrap": "always"
  },
  "dockerfile": {
  },
  "prettier": {
    "bracketSpacing": true,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "includes": ["*.{ts,tsx,mts,js,jsx,cjs,mjs,json,md,dockerfile,html,css,sass,scss,yml,yaml}"],
  "excludes": [
    "dist/",
    "node_modules/",
    "*-lock.json"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.83.0.wasm",
    "https://plugins.dprint.dev/json-0.17.0.wasm",
    "https://plugins.dprint.dev/markdown-0.15.2.wasm",
    "https://plugins.dprint.dev/dockerfile-0.3.0.wasm",
    "https://plugins.dprint.dev/prettier-0.20.0.json@a858510ad0110784e7583b02c38d6ee6bfd448c8087ba2303312ca3cd5899561"
  ]
}
